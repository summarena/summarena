---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
const {
  title = 'SummArena — Your Personal Distiller',
  description = 'Summarena — Your personal AI distiller for everything you follow.',
} = Astro.props;
const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="bg-gray-50 text-slate-900 font-body selection:bg-brand-100 selection:text-brand-900 min-h-screen"
  >
    <slot />
    <!-- Optional: global footer could live here -->
    <footer class="border-t bg-white mt-16">
      <div
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 flex flex-col md:flex-row items-center justify-between gap-4"
      >
        <div class="flex items-center gap-2 text-sm text-slate-500">
          <span
            class="inline-flex h-7 w-7 items-center justify-center rounded-lg bg-slate-900 text-white font-bold"
            >S</span
          >
          <span>© {year} SummArena. All rights reserved.</span>
        </div>
        <div class="text-sm text-slate-500 flex items-center gap-4">
          <a
            href="#pilot"
            data-track="footer-start-free-click"
            class="text-slate-600 hover:text-slate-900">Start free</a
          >
        </div>
      </div>
    </footer>
  </body>
</html>
