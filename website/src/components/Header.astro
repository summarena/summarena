---
export interface Props {
  title?: string;
}

const { title = 'Summarena' } = Astro.props;
---

<header class="bg-white border-b border-gray-200">
  <div class="max-w-4xl mx-auto px-4 py-6">
    <nav class="flex justify-between items-center">
      <a href="/" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
        {title}
      </a>
      <div class="flex gap-6">
        <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors">Blog</a>
        <a
          href="/docs/guides/getting-started"
          class="text-gray-600 hover:text-gray-900 transition-colors">Docs</a
        >
      </div>
    </nav>
  </div>
</header>
