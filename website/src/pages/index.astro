  <script is:inline>
    const params = new URLSearchParams(location.search);
    const form = document.getElementById('lead-form');
    const msg = document.getElementById('lead-msg');
    const btn = document.getElementById('lead-submit');

    // Reliable view event
    (function trackView() {
      if (window.umami && typeof window.umami.track === 'function') {
        window.umami.track('view_lp', {
          utm_source: params.get('utm_source') || '',
          utm_medium: params.get('utm_medium') || '',
          utm_campaign: params.get('utm_campaign') || '',
          referrer: document.referrer || '',
        });
      } else setTimeout(trackView, 300);
    })();

    document
      .getElementById('email')
      ?.addEventListener('focus', () => window.umami?.track('form_start'));

    form?.addEventListener('submit', async e => {
      e.preventDefault();
      btn.disabled = true;
      btn.textContent = 'Submitting';
      msg.textContent = '';
      msg.className = 'text-xs text-center';

      window.umami?.track('form_submit');
      try {
        const res = await fetch(form.action, { method: 'POST', body: new FormData(form) });
        const data = await res.json().catch(() => ({}));
        if (data.ok) {
          msg.textContent = "You're in. Check the sample below.";
          msg.className = 'text-xs text-center text-green-600';
          window.umami?.track('form_success');
        } else {
          msg.textContent =
            data.error === 'already_subscribed'
              ? "You're already on the list."
              : 'Please enter a valid email.';
          msg.className = 'text-xs text-center text-red-600';
          window.umami?.track('form_error');
        }
      } catch {
        msg.textContent = 'Error. Try again.';
        msg.className = 'text-xs text-center text-red-600';
        window.umami?.track('form_error');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Start free';
      }
    });

    // Hide mobile CTA when #pilot is visible
    const bar = document.querySelector('[data-track="mobile-bottom-cta"]')?.closest('div');
    const pilot = document.getElementById('pilot');
    if (bar && pilot && 'IntersectionObserver' in window) {
      new IntersectionObserver(([e]) => {
        bar.style.display = e.isIntersecting ? 'none' : '';
      }).observe(pilot);
    }

    // click tracking for [data-track]
    document.addEventListener('click', e => {
      const el = e.target && e.target.closest?.('[data-track]');
      const name = el && el.getAttribute && el.getAttribute('data-track');
      if (name && window.umami?.track) window.umami.track(name);
    });

    // section view tracking for [data-track-view] (fires once per section)
    document.querySelectorAll('[data-track-view]').forEach(el => {
      const name = el.getAttribute('data-track-view');
      if (!name) return;
      const io = new IntersectionObserver(
        entries => {
          const ent = entries[0];
          if (ent.isIntersecting) {
            window.umami?.track?.(name);
            io.unobserve(el);
          }
        },
        { threshold: 0.5 }
      );
      io.observe(el);
    });
  </script>

